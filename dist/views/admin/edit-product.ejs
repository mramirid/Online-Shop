<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form" action="/admin/<%= isEdit ? 'edit-product' : 'add-product' %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= isEdit ? product.title : '' %>">
      </div>

      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<%= isEdit ? product.imageUrl : '' %>">
      </div>

      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01" value="<%= isEdit ? product.price : '' %>">
      </div>

      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5"><%= isEdit ? product.description : '' %></textarea>
      </div>

      <% if (isEdit) { %>
       <input type="hidden" name="productId" value="<%= product._id %>">
      <% } %>
      
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <button class="btn" type="submit"><%= isEdit ? 'Edit Product' : 'Add Product' %></button>
    </form>
  </main>

  <%- include('../includes/end.ejs') %>