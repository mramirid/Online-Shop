<section class="pagination">
  <% if (curPage !== 1 && prevPage !== 1) { %>
    <a href="?page=1">1</a> 
  <% } %>

  <% if (hasPrevPage) { %>
    <a href="?page=<%= prevPage %>"><%= prevPage %></a>
  <% } %>
  
  <a href="?page=<%= curPage %>" class="active"><%= curPage %></a>
  
  <% if (hasNextPage) { %>
    <a href="?page=<%= nextPage %>"><%= nextPage %></a>
  <% } %>
  
  <% if (lastPage !== curPage && nextPage !== lastPage) { %>
    <a href="?page=<%= lastPage %>"><%= lastPage %></a>
  <% } %>
</section>